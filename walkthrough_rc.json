{
  "id": "nginx-controller",
  "apiVersion": "v1beta1",
  "kind": "ReplicationController",
  "desiredState": {
    "replicas": 2,
    "replicaSelector": {
      "name": "nginx"
    },
    "podTemplate": {
      "desiredState": {
        "manifest": {
          "version": "v1beta1",
          "id": "nginx",
          "containers": [
            {
              "name": "nginx",
              "image": "dockerfile/nginx",
              "ports": [
                {
                  "containerPort": 80
                }
              ]
            }
          ]
        }
      },
      "labels": {
        "name": "nginx"
      }
    }
  }
}